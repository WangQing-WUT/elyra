{
  "type": "object",
  "properties": {
    "name": {
      "title": "Pipeline Name",
      "type": "string",
      "uihints": {
        "ui:readonly": true
      }
    },
    "runtime": {
      "title": "Pipeline Runtime",
      "type": "string",
      "uihints": {
        "ui:readonly": true
      }
    },
    "description": {
      "title": "Pipeline Description",
      "type": "string",
      "uihints": {
        "ui:placeholder": "Pipeline Description",
        "ui:widget": "textarea"
      }
    },
    "pipeline_defaults": {
      "type": "object",
      "properties": {
        "cos_object_prefix": {
          "title": "Object Storage path prefix",
          "type": "string",
          "description":
            "For generic components, this path prefix is used when storing artifacts on Object Storage.",
          "uihints": {
            "ui:placeholder": "project/subproject"
          }
        },
        "input_parameters": {
          "title": "Pipeline Input parameters",
          "type": "array",
          "items":{
            "type": "object",
            "properties": {
              "name":{
                "type": "string",
                "title": "Parameter Name"
              },
              "description": {
                "type": "string",
                "title": "Description"
              },
              "type":{
                "title": "Type",
                "description": "The type of this parameter.",
                "oneOf": [
                  {
                    "label": "String",
                    "properties": {
                      "value": {
                        "type": "string",
                        "title": "Default Value"
                      },
                      "widget": {
                        "type": "string",
                        "default": "String"
                      }
                    },
                    "uihints":{
                      "widget": {"ui:field": "hidden"}
                    }
                  },
                  {
                    "label": "List",
                    "properties": {
                      "value": {
                        "type": "string",
                        "title": "Default Value",
                        "default": "[]"
                      },
                      "widget": {
                        "type": "string",
                        "default": "List"
                      }
                    },
                    "uihints":{
                      "widget": {"ui:field": "hidden"}
                    }
                  },
                  {
                    "label": "Integer",
                    "properties": {
                      "value": {
                        "type": "number",
                        "title": "Default Value"
                      },
                      "widget": {
                        "type": "string",
                        "default": "Integer"
                      }
                    },
                    "uihints":{
                      "widget": {"ui:field": "hidden"}
                    }
                  },
                  {
                    "label": "Float",
                    "properties": {
                      "value": {
                        "type": "number",
                        "title": "Default Value"
                      },
                      "widget": {
                        "type": "string",
                        "default": "Float"
                      }
                    },
                    "uihints":{
                      "widget": {"ui:field": "hidden"}
                    }
                  },
                  {
                    "label": "Bool",
                    "properties": {
                      "value": {
                        "type": "string",
                        "title": "Default Value",
                        "enum": [true, false],
                        "default": false
                      },
                      "widget": {
                        "type": "string",
                        "default": "Bool"
                      }
                    },
                    "uihints":{
                      "widget": {"ui:field": "hidden"},
                      "value": {"ui:hideError": true}
                    }
                  }
                ]
              }
            },
            "required": ["name", "type"]
          },
          "uniqueItems": true,
          "uihints": {
            "items": {
              "name": {"ui:placeholder": "param_1"}
            }
          }
        },
        {% if elyra_owned_parameters %}
        "node_defaults_header": {
          "type": "null",
          "title": "Node Defaults",
          "description":
            "Default values are applied to all nodes in this pipeline and can be customized in each node.",
          "uihints": {
            "ui:field": "header"
          }
        },
        {% endif %}
        {% for property in elyra_owned_parameters %}
        "{{property.property_id}}": {{ property.get_schema()|tojson }},
        {% endfor %}
        "generic_node_defaults_header": {
          "type": "null",
          "title": "Generic Node Defaults",
          "description":
            "Default values are applied to all generic nodes in this pipeline and can be customized in each node.",
          "uihints": {
            "ui:field": "header"
          }
        },
        "runtime_image": {
          "title": "Runtime Image",
          "description": "Container image used as execution environment.",
          "type": "string"
        }
        {% if elyra_owned_generic_parameters %}
        ,
        {% endif %}
        {% for property in elyra_owned_generic_parameters %}
        "{{property.property_id}}": {{ property.get_schema()|tojson }}
          {% if loop.index != loop|length %}
          ,
          {% endif %}
        {% endfor %}
        {% if elyra_owned_custom_parameters %}
        ,
        "custom_node_defaults_header": {
          "type": "null",
          "title": "Custom Node Defaults",
          "description":
              "Default values are applied to all custom nodes in this pipeline and can be customized in each node.",
          "uihints": {
            "ui:field": "header"
          }
        },
        {% endif %}
        {% for property in elyra_owned_custom_parameters %}
        "{{property.property_id}}": {{ property.get_schema()|tojson }}
          {% if loop.index != loop|length %}
          ,
          {% endif %}
        {% endfor %}
      }
    }
  }
}
